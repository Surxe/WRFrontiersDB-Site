---
import langs from '../../public/langs.json';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/WRFrontiersDB-Site/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<select id="lang-selector">
			{Object.entries(langs).map(([code, names]) => (
				<option value={code} selected={code === 'en'}>{(names as any)[code]}</option>
			))}
		</select>
		
		<h1>Astro</h1>
		<ul>
			<li><a href="/WRFrontiersDB-Site/modules">Modules</a></li>
		</ul>

		<script is:inline>
			// Load saved language or default to 'en'
			const savedLang = localStorage.getItem('selectedLang') || 'en';
			
			// Set the selector to saved language on page load
			const selector = document.getElementById('lang-selector');
			if (selector) {
				selector.value = savedLang;
				
				// Save when changed
				selector.addEventListener('change', (e) => {
					localStorage.setItem('selectedLang', e.target.value);
				});
			}
		</script>
	</body>
</html>
