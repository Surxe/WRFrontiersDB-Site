---
import type { PilotType } from '../../../types/pilot';
import LocalizedText from '../../../components/LocalizedText.astro';
import VersionList from '../../../components/VersionList.astro';
import ObjectPageScripts from '../../../components/ObjectPageScripts.astro';
import ParseObjectPage from '../../../components/ParseObjectPage.astro';
import { generateObjectStaticPaths, getParseObject, getVersionsData } from '../../../utils/parse_object';

export async function getStaticPaths() {
  return await generateObjectStaticPaths("Objects/PilotType.json");
}

const { id, version } = Astro.params;
const { objectVersions } = Astro.props;

const pilotType = getParseObject<PilotType>(id, version, "Objects/PilotType.json");

// Load version metadata
const { versions, versionInfo } = getVersionsData(version);

// Extract English text as fallback
const defaultName = pilotType.name?.en || pilotType.id;

---

<ParseObjectPage>
  <LocalizedText 
    id="pilot-type-name-title"
    tag="title"
    localizationKey={pilotType.name}
    slot="head"
  />
    <p>Back to <a href="/WRFrontiersDB-Site/pilot_types">Pilot Types</a></p>
    <LocalizedText 
      id="pilot-type-name"
      tag="h1"
      localizationKey={pilotType.name}
    />

    {pilotType.can_change_talents && <p>Can change talents</p>}

    <p>Version: {versionInfo?.title || version} ({version})</p>
    <p>Language: <span id="current-lang">en</span></p>
    
    <VersionList 
      parseObjectUrl="pilot_types"
      id={id}
      myVersions={objectVersions}
      versionsData={versions}
    />
    
    <ObjectPageScripts 
      version={version}
      objectData={pilotType}
    />
</ParseObjectPage>
